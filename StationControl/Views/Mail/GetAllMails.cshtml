@model StationControl.Models.Entities.Deputy
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deputy Personnel Records</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


    <style>
        body {
        background-color: #f8f9fa;
        }

        .card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border: none;
        border-radius: 10px;
        }

        .table thead {
        background-color: #2c3e50;
        color: white;
        }

        .badge-list li {
        margin-bottom: 4px;
        }

        .avatar-initial {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: #495057;
        margin-right: 10px;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-dark bg-dark mb-5">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fa-solid fa-shield-halved me-2"></i> Sheriff's Department Database
            </a>
        </div>
    </nav>


    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">

                <div class="card p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="card-title mb-0 text-secondary">Deputy Personnel List</h3>
                        <a class="btn btn-primary btn-sm" asp-controller="Mail" asp-action="Index">
                            <i class="fa-solid fa-plus"></i> Send Mail
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Title</th>
                                    <th scope="col">Message</th>
                                    <th scope="col">Id</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var mail in Model.Mails)
                                {
                                    <tr>
                                        <td>@mail.Title</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-initial">JD</div>
                                                <div>
                                                    <div class="fw-bold">@mail.Message</div>
                                                    <div class="text-muted small">Unit: Patrol</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-primary rounded-pill">@mail.MailId</span></td>


                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                    <nav aria-label="Page navigation" class="mt-3">
                        <ul class="pagination justify-content-end">
                            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>