@model StationControl.Models.Entities.Mail
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yeni Mesaj Gönder</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            background-color: #f4f6f9; /* Hafif gri arka plan */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card-custom {
            border: none;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        }

        .card-header-custom {
            background: linear-gradient(90deg, #2c3e50 0%, #34495e 100%);
            color: white;
            border-radius: 12px 12px 0 0 !important;
            padding: 20px;
        }

        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
        }

        .form-control {
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #dee2e6;
            background-color: #f8f9fa;
        }

            .form-control:focus {
                background-color: #fff;
                border-color: #2c3e50;
                box-shadow: 0 0 0 0.25rem rgba(44, 62, 80, 0.15);
            }

        .btn-send {
            background-color: #2c3e50;
            color: white;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-send:hover {
                background-color: #1a252f;
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            }
    </style>
</head>
<body>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">

                <div class="card card-custom">

                    <div class="card-header card-header-custom d-flex align-items-center">
                        <i class="fa-solid fa-paper-plane me-3 fa-lg"></i>
                        <h4 class="mb-0">Yeni Mesaj Oluştur</h4>
                    </div>
                    
                    <div class="card-body p-4 p-md-5">
                        <form asp-action="SendMail" method="post">

                            <div class="mb-4">
                                <label for="recipientInput" class="form-label">
                                    <i class="fa-solid fa-user me-1 text-secondary"></i> Kime
                                </label>
                                <input type="text" class="form-control" asp-for="@Model.Email" placeholder="Örn: İnsan Kaynakları, Şerif Yardımcısı..." required>
                            </div>

                            <div class="mb-4">
                                <label for="subjectInput" class="form-label">
                                    <i class="fa-solid fa-tag me-1 text-secondary"></i> Başlık
                                </label>
                                <input type="text" class="form-control" asp-for="@Model.Title" placeholder="Mesajın konusu nedir?" required>
                            </div>

                            <div class="mb-4">
                                <label for="messageTextarea" class="form-label">
                                    <i class="fa-solid fa-envelope-open-text me-1 text-secondary"></i> Mesaj
                                </label>
                                <textarea class="form-control" asp-for="@Model.Message" rows="6" placeholder="Mesajınızı buraya yazınız..." required></textarea>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="button" class="btn btn-outline-secondary me-md-2">İptal</button>
                                <button type="submit" class="btn btn-send">
                                    <i class="fa-solid fa-paper-plane me-2"></i> Gönder
                                </button>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>