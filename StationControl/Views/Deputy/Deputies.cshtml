@model List<StationControl.Models.Entities.Deputy>
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deputy Directory</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
        background-color: #f0f2f5; /* Hafif gri arka plan */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .section-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 40px;
        text-align: center;
        }

        .deputy-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center; /* İçerikleri ortalamak için */
        background-color: #fff;
        }

        .deputy-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
        }

        .card-header-custom {
        background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%); /* Koyu lacivert gradient */
        color: white;
        padding: 15px 10px;
        border-bottom: none;
        position: relative;
        z-index: 1;
        border-radius: 15px 15px 0 0;
        }

        .profile-img-container {
        width: 200px; /* Sabit genişlik */
        height: 200px; /* Sabit yükseklik */
        border-radius: 50%; /* Yuvarlak fotoğraf */
        border: 6px solid #f0f2f5; /* Fotoğraf etrafında boşluk ve border */
        overflow: hidden;
        margin: -100px auto 20px auto; /* Header'ın üstüne binmesi için negatif margin */
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        background-color: #ddd; /* Resim yüklenmezse gri arka plan */
        position: relative;
        z-index: 2; /* Header'ın üstünde kalması için */
        }

        .profile-img-container img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Resmi orantılı bir şekilde kutuya sığdırır */
        }

        .deputy-name {
        font-size: 1.8rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
        }

        .deputy-rank {
        font-size: 1rem;
        color: #6c757d;
        margin-bottom: 20px;
        }

        .badge-info {
        font-size: 0.9rem;
        font-weight: 600;
        color: #495057;
        background-color: #e9ecef;
        padding: 8px 15px;
        border-radius: 8px;
        display: inline-block;
        margin-bottom: 15px;
        }

        .certificates-list {
        text-align: left;
        padding-left: 0; /* Bootstrap'in varsayılan list-group paddingini sıfırlar */
        }

        .certificates-list li {
        font-size: 0.9rem;
        color: #495057;
        padding: 8px 0;
        border-bottom: 1px dotted #e9ecef;
        display: flex;
        align-items: center;
        }

        .certificates-list li:last-child {
        border-bottom: none;
        }

        .certificates-list i {
        color: #28a745; /* Yeşil ikonlar */
        margin-right: 10px;
        font-size: 1.1rem;
        }


        .deputy-name
        {
        font-size: 1.5rem;
        }

        .profile-img-container {
        width: 150px;
        height: 150px;
        margin-top: -75px;
        }

        }
    </style>
</head>
<body>

    

    <div class="container py-5">
        <h2 class="section-title">Sheriff's Department Deputies</h2>

        <div class="row g-4 mb-4">
            @foreach(var deputy in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 d-flex">
                    <div class="card deputy-card w-100">
                        <div class="card-header-custom">
                            <h5 class="mb-0 text-white"><i class="fa-solid fa-star me-2"></i> Elite Force</h5>
                        </div>
                        <div class="profile-img-container">
                            <img src="~/css/deputy.png" alt="Deputy John Doe">
                        </div>
                        <div class="card-body pt-0">
                            <h3 class="deputy-name">@deputy.FullName</h3>
                            <p class="deputy-rank text-muted">@deputy.Rank</p>
                            <div class="badge-info">
                                Badge No: <span class="fw-bold">@deputy.BadgeNumber</span>
                            </div>
                            <h6 class="text-start mt-3 mb-2 text-secondary"><i class="fa-solid fa-award me-2"></i>Certificates</h6>
                            <ul class="list-unstyled certificates-list">
                                @if (deputy.Certificates == null)
                                {

                                }
                                @foreach(var cert in deputy.Certificates)
                                {
                                    <li><i class="fa-solid fa-check-circle"></i>@cert.Name</li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            }

        </div>

        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>