@model List<StationControl.Models.Entities.Deputy>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deputy Personnel Records</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


    <style>
        body {
        background-color: #f8f9fa;
        }

        .card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border: none;
        border-radius: 10px;
        }

        .table thead {
        background-color: #2c3e50;
        color: white;
        }

        .badge-list li {
        margin-bottom: 4px;
        }

        .avatar-initial {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: #495057;
        margin-right: 10px;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-dark bg-dark mb-5">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fa-solid fa-shield-halved me-2"></i> Sheriff's Department Database
            </a>
        </div>
    </nav>
    

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">

                <div class="card p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="card-title mb-0 text-secondary">Deputy Personnel List</h3>
                        <a class="btn btn-primary btn-sm" asp-controller="Deputy" asp-action="AddDeputy">
                            <i class="fa-solid fa-plus"></i> Add New Deputy
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">Rank</th>
                                    <th scope="col">Badge Number</th>
                                    <th scope="col">Certificates</th>
                                    <th scope="col" class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var deputy in Model)
                                {
                                    <tr>
                                        <td>@deputy.DeputyId</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-initial">JD</div>
                                                <div>
                                                    <div class="fw-bold">@deputy.FullName</div>
                                                    <div class="text-muted small">Unit: Patrol</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-primary rounded-pill">@deputy.Rank</span></td>
                                        <td class="font-monospace">@deputy.BadgeNumber</td>
                                        <td>
                                            <ul class="list-unstyled mb-0 badge-list">
                                                @foreach(var cert in deputy.Certificates)
                                                {
                                                    <li><i class="fa-solid fa-check text-success me-1"></i>@cert.Name</li>
                                                }

                                            </ul>
                                        </td>
                                        <td class="text-end">
                                            
                                            <a class="btn btn-sm btn-outline-primary" asp-controller="Deputy" asp-action="DeputyDetails" asp-route-id="@deputy.UserId"><i class="fa-solid fa-pen"></i></a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>

                    

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>