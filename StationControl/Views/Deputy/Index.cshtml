@model StationControl.Models.Entities.Deputy
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deputy Personal Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
        background-color: #e9ecef;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .profile-card {
        border: none;
        border-radius: 15px;
        overflow: hidden; /* Köşeleri yuvarlatmak için */
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .profile-header {
        background: linear-gradient(90deg, #1a2a3a 0%, #2c3e50 100%);
        padding: 20px;
        color: white;
        }

        /* Fotoğraf Alanı Ayarları */
        .profile-img-container {
        width: 300px;
        height: 300px;
        border: 5px solid #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        margin: 0 auto; /* Mobilde ortalamak için */
        background-color: #ddd; /* Resim yüklenmezse gri kalsın */
        }

        .profile-img-container img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Resmi orantılı bir şekilde kutuya sığdırır */
        }

        .info-label {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #6c757d;
        margin-bottom: 5px;
        font-weight: 600;
        }

        .info-value {
        font-size: 1.2rem;
        font-weight: 500;
        color: #212529;
        }

        .certificate-list li {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        margin-bottom: 8px;
        border-radius: 8px;
        padding: 10px 15px;
        transition: all 0.3s ease;
        }

        .certificate-list li:hover {
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        border-color: #dee2e6;
        transform: translateX(5px);
        }

        .badge-number {
        font-family: 'Courier New', Courier, monospace;
        letter-spacing: 2px;
        font-weight: bold;
        background-color: #e2e6ea;
        padding: 5px 10px;
        border-radius: 5px;
        }
    </style>
</head>
<body>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <div class="card profile-card">
                    <div class="profile-header d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-user-shield fa-2x me-3"></i>
                            <h4 class="m-0">OFFICIAL PERSONNEL RECORD</h4>
                        </div>
                        <span class="badge bg-success bg-opacity-25 text-success border border-success px-3 py-2">ACTIVE DUTY</span>
                    </div>

                    <div class="card-body p-4 p-md-5">
                        <div class="row g-5 align-items-center">

                            <div class="col-md-5 text-center">
                                <div class="profile-img-container">
                                    <img src="~/css/deputy.png" alt="Deputy Profile Photo">
                                </div>
                                <div class="mt-3">
                                    <p class="text-muted small"><i class="fa-solid fa-camera me-1"></i> Last Updated: 15 Nov 2024</p>
                                </div>
                            </div>

                            <div class="col-md-7">
                                @if (Model == null)
                                {
                                    <div class="alert alert-warning" role="alert">
                                        No deputy data available.
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-4 border-bottom pb-3">
                                        <div class="info-label">Full Name</div>
                                        <h1 class="display-6 fw-bold text-dark mb-1">@Model.FullName</h1>
                                        <div class="d-flex align-items-center mt-2">
                                            <span class="badge bg-dark me-2 p-2">@Model.Rank</span>
                                            <span class="text-muted">|</span>
                                            <span class="ms-2 text-muted">Special Operations Division</span>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <div class="info-label">Badge Number</div>
                                        <span class="badge-number text-dark">@Model.BadgeNumber</span>
                                    </div>

                                    <div>
                                        <div class="info-label mb-3">
                                            <i class="fa-solid fa-certificate me-1 text-warning"></i> Verified Certificates
                                        </div>
                                        <ul class="list-unstyled certificate-list mb-0">
                                            @if (Model.Certificates == null)
                                            {

                                            }
                                            @foreach (var cert in Model.Certificates)
                                            {
                                                <li class="d-flex align-items-center">
                                                    <i class="fa-solid fa-book-bookmark text-primary me-3 fa-lg"></i>
                                                    <div>
                                                        <strong>@cert.Name</strong>
                                                        <div class="small text-muted">Issued: 2022 - Exp: 2026</div>
                                                    </div>
                                                </li>
                                            }



                                        </ul>
                                    </div>
                                }
                                

                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light text-center py-3 border-top">
                        <small class="text-muted">CONFIDENTIAL - FOR OFFICIAL USE ONLY</small>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>